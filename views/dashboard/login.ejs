<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="../css/login.css" rel="stylesheet" type="text/css" media="all">
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
</head>
<body>
    <div id="errorMsg" style="text-align: center; display: none;" class="alert alert-warning"></div>
    <div class="containerLogin">
        <form enctype="application/x-www-form-urlencoded" method="post">
            <div class="contentLogin">
                    <div class="titleLogin">
                        Iniciar sesión
                    </div>
                    <div class="userName">
                        <input type="text" name="user" id="userName" placeholder="Usuario">
                    </div>
                    <div class="userPassword">
                        <input type="password" name="password" id="passwName" placeholder="Contraseña">
                    </div>
                    <div class="submit">
                        <input type="submit" value="Iniciar" style="font-size: 20px;">
                    </div>
            </div>
        </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js" integrity="sha384-q2kxQ16AaE6UbzuKqyBE9/u/KzioAlnx2maXQHiDX9d4/zp8Ok3f+M7DPm+Ib6IU" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.min.js" integrity="sha384-pQQkAEnwaBkjpqZ8RU1fF1AKtTcHJwFl3pblpTlHXybJjHpMYo79HY3hIi4NKxyj" crossorigin="anonymous"></script>
    <script>
        const mostrarError=(elementoId, mensaje)=>{
            let divError = document.getElementById(elementoId);
            divError.innerHTML = `<p>${mensaje}</p>`;
            divError.style.display = "block"
            setTimeout(()=>{ divError.innerHTML = ``; divError.style.display = "none"},3000);
        }

        function getParametro(variable)
        {
            var query = window.location.search.substring(1); 
            var vars = query.split("&");
            for (var i=0;i<vars.length;i++) {
                    var pair = vars[i].split("=");
                    if(pair[0] == variable){return pair[1];}
            }
            return(false);
        }

        var error = getParametro('error');

        if (error == "e") {
            let divError = document.getElementById("errorMsg");
            divError.setAttribute("class", "alert alert-danger")
            mostrarError('errorMsg', 'Usuario o contraseña incorrecta');
        }else if (error == "n") {
            mostrarError('errorMsg', 'No tiene permisos para acceder');
        }

    </script>
</body>
</html>  