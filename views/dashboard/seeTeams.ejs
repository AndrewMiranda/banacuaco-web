<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="../css/layout.css" rel="stylesheet" type="text/css" media="all">
    <link rel="stylesheet" href="../css/galeryDashboard.css">
    <title>Dashboard</title>
    <style>
        .imgGalery{
            text-align: center;
            color: #653392;
            height: 210px;
        }

        .icons{
            display: flex;
            margin-top: -20%;
            justify-content: space-between;
            padding: 0 5%;
        }

        .iconsImgEdit,
        .iconsImgDelete{
            background: #00000060;
            z-index: 100;
            position: relative;
            padding: 5px;
            border-radius: 8px;
            cursor: pointer;
        }

        .iconsImgEdit, .iconsImgEdit img, .iconsImgDelete img{
            box-shadow: none;
        }

        .iconsImgEdit:hover,
        .iconsImgDelete:hover{
            background-color: #000000;
        }

        .iconsImgEdit img,
        .iconsImgDelete img{
            width: 24px;
            height: 24px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <div class="containerLayout">
        <%- include('./layout/index.ejs') %>
    </div>
    <div class="infoDashboard">
        <div class="conatinerGalery">
            <label for="newImage">
                <div class="newGalery">
                    <img src="../images/person_add.svg" alt="">
                </div>
            </label>
            <button id="newImage" onclick="location.href = '/dashboard/teamAdd';"></button>

            <div class="titleGalery">
                Equipo
            </div>
            <div class="contentGalery">
                <% data.forEach(function(data) { %>
                    <div class="imgGalery" id="row-<%= data.id %>">
                        <img src="../content/team/<%= data.url %>" alt="">
                        <div class="icons">
                            <div class="iconsImgEdit">
                                <a href="/dashboard/editarEquipo?id=<%= data.id %>"><img src="../images/editCrud.svg" alt="" ></a>
                            </div>
                            <div class="iconsImgDelete">
                                <img src="../images/deleteCrud.svg" alt=""  onclick="deleteAlert(<%= data.id %>, 'team');">
                            </div>
                        </div>
                        <br>
                        <p><%= data.name %></p>
                        <p><%= data.cargo_en %></p>
                        <p><%= data.cargo_es %></p>
                    </div>
                <% }); %>
            </div>
        </div>
    </div>
</body>
</html>
<script src="../js/general/addAlertModal.js"></script>
<script type="module" src="../js/general/modules/headerAndsocialMedia.mjs"></script>
